{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "module": "ES2015",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}